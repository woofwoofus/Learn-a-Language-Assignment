class Person {

   // Properties of the class...
   private String name;
   public int    age;
   private String sex;
    
   // Constructor of the class...
   public Person(String aName, int anAge, String aSex) {
      name = aName;
      age  = anAge;
      sex = aSex;
   }

   // Methods of the class...
   public void talk() {
      System.out.println("Hi, my name's " + name);
      System.out.println("and my age is " + age);
      System.out.println("I am a " + sex);
      commentAboutAge();
      System.out.println();
   }
   public void commentAboutAge() {
      if (age < 5) {
         System.out.println("baby");
      }
      if (age == 5) {
         System.out.println("time to start school");
      }
      if (age > 60) {
    	  System.out.println("old person");
      }
   }
   
   public void growOlder() {
	   age = age + 1;
   }
   
   public void growOlderBy(int x) {
	   age = age + x;
   }
   
   public void giveKnighthood() {
	   name = "Sir "+name;
   }

}

class PersonTest {

   // The main method is the point of entry into the program...
   public static void main(String[] args) {

      Person ls = new Person("Luke Skywalker",34,"male");
      Person wp = new Person("Winston Peters",48,"male");

      ls.growOlder();
      wp.growOlder();
      
      wp.giveKnighthood();
      
      ls.talk();
      wp.talk();
      
      System.out.println(ls.age);

   }

}

